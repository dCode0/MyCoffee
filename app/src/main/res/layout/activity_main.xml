<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cafee"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_field"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/toppings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="Toppings"
        android:textAllCaps="true"
        android:textColor="#F5FFFA"
        android:textSize="20sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/whippedcream_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#8FBC8F"
        android:checked="true"
        android:text="@string/whipped_cream"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#F5FFFA"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/chocolate_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#8FBC8F"
        android:checked="true"
        android:text="@string/chocolate"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#F5FFFA"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="Quantity"
        android:textAllCaps="true"
        android:textColor="#F5FFFA"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <Button
            android:id="@+id/minus_button_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="6dp"
            android:onClick="decrement"
            android:text="-"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="1"
            android:textColor="#F5FFFA"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/plus_button_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp"
            android:onClick="increment"
            android:text="+"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ORDER SUMMARY"
        android:textAllCaps="true"
        android:textColor="#F5FFFA"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/order_summary_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="$0"
        android:textColor="#F5FFFA"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="submitOrder"
        android:text="Order"
        android:textAllCaps="true"
        android:textStyle="bold" />
</LinearLayout>
